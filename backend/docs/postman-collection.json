{
  "info": {
    "name": "Group78 Backend (Week 7 Mock)",
    "_postman_id": "12345678-90ab-cdef-1234-567890abcdef",
    "description": "Postman collection for testing Login and Assignments endpoints (Week 7 mock).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:5000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Login (mock)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"coord@example.com\",\n  \"password\": \"pass\"\n}"
        },
        "url": "{{baseUrl}}/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.token) {",
              "  pm.collectionVariables.set('token', json.token);",
              "  console.log('Saved token to {{token}}');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Assignments (mock)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/assignments?status=current&page=1&pageSize=20",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ]
      }
    }
  ]
}